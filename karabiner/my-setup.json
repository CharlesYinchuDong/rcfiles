{
    "title": "Charles' Personal Setup",
    "rules": [
        {
            "description": "Define caps_lock as Hyper Key",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "modifiers": [
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Change Hyper + H/J/K/L to Arrow Keys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Change Hyper + Backspace to Forward Delete",
            "manipulators": [
                {
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_forward"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Swap Command and Option Key",
            "manipulators": [
                {
                    "from": {
                        "key_code": "left_option"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_command"
                    },
                    "to": [
                        {
                            "key_code": "right_option"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_option"
                    },
                    "to": [
                        {
                            "key_code": "right_command"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
